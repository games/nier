    "@types/three": "^0.172.0",
    "@types/yuka": "^0.7.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-mdcs": "^5.0.0",
    "gltfpack": "^0.22.0",
    "rollup": "^4.31.0",
    "serve": "^14.2.4",
    "typescript": "^5.7.3",
